<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/viewOn"
            android:layout_width="382dp"
            android:layout_height="427dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rectangle_design"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/ExitButton"
            android:layout_width="137dp"
            android:layout_height="59dp"
            android:layout_marginStart="236dp"
            android:layout_marginTop="360dp"
            android:text="log out"
            app:cornerRadius="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/viewDesign"
            android:layout_width="332dp"
            android:layout_height="162dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/rectangle_design_white"
            app:layout_constraintStart_toStartOf="@+id/viewOn"
            app:layout_constraintTop_toTopOf="@+id/viewOn" />

        <ImageView
            android:id="@+id/genderView"
            android:layout_width="75dp"
            android:layout_height="74dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="28dp"
            app:layout_constraintStart_toStartOf="@+id/viewDesign"
            app:layout_constraintTop_toTopOf="@+id/viewDesign" />

        <TextView
            android:id="@+id/nameAcc"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="28dp"
            android:text="@string/MyString"
            android:textColor="@color/teal_700"
            app:layout_constraintStart_toStartOf="@+id/viewDesign"
            app:layout_constraintTop_toTopOf="@+id/viewDesign" />

        <TextView
            android:id="@+id/textNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="204dp"
            android:text="*Your protected name in the system"
            android:textColor="#919191"
            app:layout_constraintStart_toStartOf="@+id/viewOn"
            app:layout_constraintTop_toTopOf="@+id/viewOn" />

        <TextView
            android:id="@+id/textNameTextView2"
            android:layout_width="315dp"
            android:layout_height="57dp"
            android:layout_marginTop="8dp"
            android:text="To protect your data, changing your password and address is not possible"
            android:textColor="#919191"
            app:layout_constraintStart_toStartOf="@+id/textNameTextView"
            app:layout_constraintTop_toBottomOf="@+id/textNameTextView" />

        <TextView
            android:id="@+id/dateTextViewAcc"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Creation date: 16.05.22"
            android:textColor="@color/brown_black"
            app:layout_constraintStart_toStartOf="@+id/nameAcc"
            app:layout_constraintTop_toBottomOf="@+id/nameAcc" />

        <TextView
            android:id="@+id/emailTextViewAcc"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Email: dotaxai@gmail.com"
            android:textColor="@color/brown_black"
            app:layout_constraintStart_toStartOf="@+id/dateTextViewAcc"
            app:layout_constraintTop_toBottomOf="@+id/dateTextViewAcc" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>